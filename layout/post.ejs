<!DOCTYPE html>
<html lang="<%= config.language || 'en' %>">
<%- partial('_partial/head') %>
<body class="bg-[var(--background-color)] text-[var(--text-primary-color)]">
  <div class="min-h-screen flex flex-col">
    <%- partial('_partial/header') %>
    
    <main class="flex-grow container mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <article class="max-w-4xl mx-auto">
        <!-- Post Header -->
        <header class="mb-12">
          <% if (page.cover || page.thumbnail) { %>
            <div class="w-full h-96 mb-8 rounded-lg overflow-hidden">
              <img src="<%= page.cover || page.thumbnail %>" 
                   alt="<%= page.title %>" 
                   class="w-full h-full object-cover">
            </div>
          <% } %>
          
          <h1 class="text-4xl md:text-5xl font-bold leading-tight mb-6">
            <%= page.title %>
          </h1>
          
          <div class="flex flex-col sm:flex-row sm:items-center gap-3 sm:gap-6 text-[var(--text-secondary-color)] text-sm">
            <time datetime="<%= page.date.toISOString() %>">
              <%= moment(page.date).format('MMMM DD, YYYY') %>
            </time>
            
            <% if (page.categories && page.categories.length) { %>
              <div class="flex items-center gap-2">
                <span>in</span>
                <% page.categories.each(function(cat, i) { %>
                  <a href="<%= url_for(cat.path) %>" 
                     class="text-[var(--primary-color)] hover:underline">
                    <%= cat.name %>
                  </a>
                  <% if (i < page.categories.length - 1) { %>, <% } %>
                <% }); %>
              </div>
            <% } %>
            
            <% if (page.tags && page.tags.length) { %>
              <div class="flex items-center gap-2">
                <span>tagged</span>
                <% page.tags.each(function(tag, i) { %>
                  <a href="<%= url_for(tag.path) %>" 
                     class="text-[var(--primary-color)] hover:underline">
                    #<%= tag.name %>
                  </a>
                  <% if (i < page.tags.length - 1) { %>, <% } %>
                <% }); %>
              </div>
            <% } %>
          </div>
        </header>
        
        <!-- Post Content -->
        <div class="prose prose-lg max-w-none">
          <%- page.content %>
        </div>
        
        <!-- Post Footer -->
        <footer class="mt-16 pt-8 border-t border-[var(--border-color)]">
          <div class="flex flex-wrap gap-2 mb-8">
            <% if (page.tags && page.tags.length) { %>
              <% page.tags.each(function(tag) { %>
                <a href="<%= url_for(tag.path) %>" 
                   class="px-3 py-1 bg-[var(--secondary-color)] text-[var(--text-primary-color)] text-sm rounded-full hover:bg-[var(--primary-color)] hover:text-white transition-colors">
                  <%= tag.name %>
                </a>
              <% }); %>
            <% } %>
          </div>
          
          <!-- Navigation -->
          <nav class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
            <% if (page.prev) { %>
              <a href="<%= url_for(page.prev.path) %>" 
                 class="flex items-center gap-2 text-[var(--primary-color)] hover:underline max-w-full sm:max-w-[45%]">
                <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="truncate">Previous: <%= page.prev.title %></span>
              </a>
            <% } else { %>
              <div class="hidden sm:block"></div>
            <% } %>
            
            <% if (page.next) { %>
              <a href="<%= url_for(page.next.path) %>" 
                 class="flex items-center gap-2 text-[var(--primary-color)] hover:underline max-w-full sm:max-w-[45%] sm:text-right">
                <span class="truncate">Next: <%= page.next.title %></span>
                <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                </svg>
              </a>
            <% } else { %>
              <div class="hidden sm:block"></div>
            <% } %>
          </nav>
        </footer>
      </article>
    </main>
    
    <%- partial('_partial/footer') %>
  </div>
</body>
</html>